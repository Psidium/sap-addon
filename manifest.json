{
  "manifest_version": 2,
  "name": "SAP Addon",
  "version": "1.14.2",
  "description": "Extension for SAP related webpages: Portal, GitHub, Fiori Launchpad, Sharepoint",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://portal.wdf.sap.corp/*"
      ],
      "js": [
        "content_scripts/portal.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://github.wdf.sap.corp/*",
        "*://github.tools.sap/*"
      ],
      "js": [
        "content_scripts/github.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://sap-my.sharepoint.com/*",
        "*://login.microsoftonline.com/*"
      ],
      "js": [
        "content_scripts/sharepoint.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://accounts.sap.com/*"
      ],
      "js": [
        "content_scripts/id_service.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://fiorilaunchpad.sap.com/sap/fiori/lunchmenu/*",
    "*://people.wdf.sap.corp/*"
  ],
  "background": {
    "scripts": [
      "background_scripts/fiori-lunchmenu.js",
      "background_scripts/on-tab-change.js",
      "background_scripts/fetch-github-name.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "SAP Addon",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/nikolockenvitz/sap-addon/firefox-permission-test/updates.json"
    }
  }
}